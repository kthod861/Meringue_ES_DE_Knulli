<theme>
	<formatVersion>7</formatVersion>
	
	<view name="grid">
		<!-- System logo -->
		<image name="logo" extra="static">
			<pos>0.5 0.06</pos>
			<origin>0.5 0.5</origin>
			<horizontalAlignment>center</horizontalAlignment>
			<verticalAlignment>center</verticalAlignment>
			<scale>0.3 </scale>
			<maxSize>0.8 0.35</maxSize>
			<path>./_inc/systems/logos/${system.theme}.png</path>
			<zIndex>4000</zIndex>
			<!--<reflexion>0.3 0.1</reflexion>-->
			<linearSmooth>true</linearSmooth>
			<opacity>0</opacity>
			<storyboard>
				<animation property="opacity" from="1" to="1" begin="300" duration="100" mode="easeOut"/>
				<animation property="scale" from="0" to="0.3" begin="300" duration="200" mode="easeOut"/>
			</storyboard>
		</image>
		<!-- game name-->
		<text name="md_name">
			<fontSize>0.025</fontSize>
			<fontPath>${fontRegular}</fontPath>
			<pos>0.010 0.095</pos>
			<origin>0 0.5</origin>
			<size>0.7 ${fontSizeBody-small}</size>
			<alignment>left</alignment>
			<color>${fgColor}</color>
			<zIndex>5000</zIndex>
			<w>0.35</w>
			<singleLineScroll>true</singleLineScroll>
			<autoScroll>horizontal</autoScroll>
			<autoScrollDelay>0.01</autoScrollDelay>
		</text>
		<!-- release date-->
		<datetime name="md_releasedate">
			<pos>0.010 0.17</pos>
			<origin>0 0.5</origin>
			<size>0.1 0.035</size>
			<format>%Y</format>
			<color>dddddd</color>
			<forceUppercase>0</forceUppercase>
			<alignment>left</alignment>
			<fontSize>0.025</fontSize>
			<value>...</value>
			<zIndex>4000</zIndex>
		</datetime>
		<!-- rating-->
		<rating name="md_rating">
			<pos>0.06 0.168</pos>
			<origin>0 0.5</origin>
			<size>0.05 0.03</size>
			<color>FFFF00</color>
			<unfilledColor>808080</unfilledColor>
			<unfilledPath>:/star_filled.svg</unfilledPath>
			<horizontalAlignment>left</horizontalAlignment>
			<zIndex>4000</zIndex>
		</rating>
		<!-- play time -->
		<text name="md_lbl_gametime">
			<pos>0.80 0.171</pos>
			<origin>0 0.5</origin>
			<size>0.11 0.035</size>
			<color>dddddd</color>
			<forceUppercase>0</forceUppercase>
			<alignment>left</alignment>
			<fontSize>0.02</fontSize>
			<zIndex>4000</zIndex>
		</text>
		<text name="md_gametime">
			<pos>0.89 0.171</pos>
			<origin>0 0.5</origin>
			<size>0.11 0.035</size>
			<color>dddddd</color>
			<forceUppercase>0</forceUppercase>
			<alignment>left</alignment>
			<fontSize>0.02</fontSize>
			<zIndex>4000</zIndex>
		</text>
		<!-- last played-->
		<text name="md_lbl_lastplayed">
			<pos>0.78 0.14</pos>
			<origin>0 0.5</origin>
			<size>0.11 0.035</size>
			<color>dddddd</color>
			<forceUppercase>0</forceUppercase>
			<alignment>left</alignment>
			<fontSize>0.02</fontSize>
			<zIndex>4000</zIndex>
		</text>		
		<datetime name="md_lastplayed">
			<pos>0.87 0.14</pos>
			<origin>0 0.5</origin>
			<size>0.11 0.035</size>
			<color>dddddd</color>
			<forceUppercase>0</forceUppercase>
			<alignment>left</alignment>
			<fontSize>0.02</fontSize>
			<zIndex>4000</zIndex>
		</datetime>


		<!-- Background-->
		<image name="background_boxart" extra="true">
			<path>${background_path}</path>
			<default>${default_background_path}</default>
			<origin>0.5 1</origin>
			<pos>0.5 1</pos>
			<size>${background_scale_gamelist}</size>
			<zIndex>100</zIndex>
			<storyboard repeatAt="100" >
				<animation property="scale" from="1" to="1.005" duration="800" mode="easeOut"/>
				<animation property="scale" from="1.005" to="1" duration="800" mode="easeIn" begin="800"/>
			</storyboard>
			<linearSmooth>true</linearSmooth>
			<opacity>0.3</opacity>
		</image>

		<!-- Foreground-->
		<image name="foreground_console" extra="static">
			<path>./_inc/images/SystemForeground_TOP.png</path>
			<origin>${origin_foreground}</origin>
			<pos>0 0</pos>
			<size>1 .6</size>
			<opacity>1</opacity>
			<clipRect>${clipRect_foreground}</clipRect>
			<zIndex>3000</zIndex>
		</image>

		<!--actual game grid -->
		<imagegrid name="gamegrid">
			<zIndex>1001</zIndex>
			<pos>0 0.15</pos>
			<size>${v.gamelistGrid.size}</size>
			<margin>0.02 0.02</margin>
			<padding>0.02 0.02 0.02 0.02</padding>
			<autoLayout>${v.gridAutoLayout}</autoLayout>
			<animateSelection>true</animateSelection>
			<centerSelection>false</centerSelection>
			<scrollbarColor>FFFFFF</scrollbarColor>
			<scrollbarSize>${v.ScrollBar}</scrollbarSize>
			<autoLayoutSelectedZoom>1.1</autoLayoutSelectedZoom>
			<scrollbarAlignment>right</scrollbarAlignment>
			<imageSource>thumbnail</imageSource>
			<scrollSound>./../systems/scroll.wav</scrollSound>
			<scrollDirection>horizontal</scrollDirection>
		</imagegrid>
		
		<!-- each game -->
		<gridtile name="default">
			<backgroundColor>00000000</backgroundColor>
			<backgroundEdgeColor>00000000</backgroundEdgeColor>
			<backgroundCenterColor>00000000</backgroundCenterColor>
			<backgroundCornerSize>9 9</backgroundCornerSize>
			<selectionMode>image</selectionMode>
			<imageSizeMode>maxSize</imageSizeMode>
			<padding>2 2</padding>
			<imageColor>ffffff</imageColor>
		</gridtile>
		<!-- selected behavior-->
		<gridtile name="selected">
			<backgroundCenterColor>ffffff59</backgroundCenterColor>
			<backgroundEdgeColor>ffffff59</backgroundEdgeColor>
			<imageColor>ffffff</imageColor>
		</gridtile>
		
		<!-- each game tile-->
		<image name="gridtile.image">
			<linearSmooth>true</linearSmooth>
			<roundCorners>0.05</roundCorners>
		</image>
		
		<!-- favorites -->
		<image name="gridtile.favorite">
			<path>./../images/favorite.png</path>
			<origin>0.5 1</origin>
			<pos>0.5 1</pos>
			<maxSize>0.4 0.4</maxSize>
			<horizontalAlignment>center</horizontalAlignment>
			<verticalAlignment>bottom</verticalAlignment>
			<!--<reflexion>0.7 0.2</reflexion>-->
		</image>
		
		<!-- default cartridge -->
		<imagegrid name="gamegrid">
			<gameImage>./../icons/cartridge-dark.png</gameImage>
			<folderImage>./../icons/folder-dark.png</folderImage>
		</imagegrid>
	</view>

</theme>
