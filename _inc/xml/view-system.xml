<theme>

<formatVersion>7</formatVersion>

	<view name="system">

		<!-- Foreground-->
		<image name="foreground_console" extra="static">
			<path>${foreground_path}</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 1</size>
			<zIndex>410</zIndex>
		</image>
		<image name="logo">
			<path>./_inc/systems/logos/${system.theme}.png</path>
		</image>
		<carousel name="systemcarousel">
			<origin>0 0.5</origin>
			<pos>0 0.13</pos>
			<size>1 1</size>
			<color>00000000</color>
			<itemScale>1.80</itemScale>
			<minLogoOpacity>0</minLogoOpacity>
			<logoScale>1.4</logoScale>
			<transitionSpeed>800</transitionSpeed>
			<systemInfoDelay>100</systemInfoDelay>
			<scaledLogoSpacing>0.4</scaledLogoSpacing>
			<defaultTransition>fade &amp; slide</defaultTransition><!--fade &amp; -->
			<zIndex>500</zIndex>
		</carousel>
		<image name="controler" extra="true">
			<path>./_inc/systems/controllers/${system.theme}.png</path>
			<default>./_inc/systems/controllers/_default.png</default>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.59</pos>
			<maxSize>${controller_maxSize}</maxSize>
			<opacity>0</opacity>
			<linearSmooth>true</linearSmooth>
			<storyboard>
				<animation property="opacity" from="0" to="1" begin="100" duration="100" mode="easeOut"/>
				<animation property="scale" from="0.5" to="1" begin="100" duration="200" mode="easeOut"/>
			</storyboard>
			<zIndex>400</zIndex>
		</image>
		<!-- System view Infos-->
		<text name="systemInfo" >
			<origin>0 0</origin>
			<pos>${sysinfo_pos}</pos>
			<size>1 0.22</size>
			<backgroundColor>00000000</backgroundColor>
			<color>ADADAD</color>
			<fontPath>${fontRegular}</fontPath>
			<fontSize>0.02</fontSize>
			<letterCase>capitalize</letterCase>
			<zIndex>600</zIndex>
		</text>
		<!-- Background-->
		<image name="background_console" extra="true">
			<path>${background_path}</path>
			<default>${default_background_path}</default>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
			<zIndex>100</zIndex>
			<storyboard repeatAt="100" >
				<animation property="scale" from="1" to="1.005" duration="800" mode="easeOut"/>
				<animation property="scale" from="1.005" to="1" duration="800" mode="easeIn" begin="800"/>
			</storyboard>
			<linearSmooth>true</linearSmooth>
		</image>
		<!-- Manufacturer Infos-->
		<text name="Manufacturer" extra="static">
			<origin>0.5 0</origin>
			<pos>${manufacturer_pos}</pos>
			<size>1 0.22</size>
			<alignment>center</alignment>
			<backgroundColor>00000000</backgroundColor>
			<color>ADADAD</color>
			<fontPath>${fontRegular}</fontPath>
			<fontSize>0.02</fontSize>
			<text>${systemManufacturer}  ${systemReleaseDateFormated}</text>
			<opacity>0.8</opacity>
			<w>0.5</w>
			<singleLineScroll>true</singleLineScroll>
			<autoScroll>horizontal</autoScroll>
			<autoScrollDelay>0.01</autoScrollDelay>
			<zIndex>600</zIndex>
		</text>
		<!-- Logo animation -->
		<control name="logo,logoText" scale="1" >
			<storyboard event="activate" repeatAt="100" >
				<animation property="scale" from="1" to="1.02" duration="800" mode="easeOut"/>
				<animation property="scale" from="1.02" to="1" duration="800" mode="easeIn" begin="800"/>
			</storyboard>
		</control>
	</view>
</theme>