<theme>
	<formatVersion>7</formatVersion>

	<variables>
		<mainColor>4075F9</mainColor>
		<onMainColor>1D1B16</onMainColor>
		<bgColor>1D1B16</bgColor>
		<sectColor>94A0FF</sectColor>
		<fgColor>FFFFFF</fgColor>
		<percent.90>E6</percent.90>
		<percent.80>CC</percent.80>
		<percent.70>B3</percent.70>
		<percent.60>99</percent.60>
		<percent.50>80</percent.50>
		<percent.40>66</percent.40>
		<percent.30>4D</percent.30>
		<percent.20>33</percent.20>
		<percent.10>1A</percent.10>
		<percent.5>0D</percent.5>
		<c.text>ffffff</c.text>
		<c.textHeader>6ecaca</c.textHeader>
		
		<fontRegular>./../fonts/font.ttf</fontRegular>
		<fontSizeBody>0.03125</fontSizeBody>
		<fontSizeBody-small>0.03125</fontSizeBody-small>
		<fontSizeCaption>0.028125</fontSizeCaption> 
		<fontSizeH2>0.04375</fontSizeH2>
		<fontBold>./../fonts/font-bold.ttf</fontBold>
		
		<v.gamelistGrid.size>1 0.85</v.gamelistGrid.size>
		<v.gridAutoLayout if="${screen.width} &lt;= '641'">3 2</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '641' &amp;&amp; ${screen.width} &lt;= '721'">3 3</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '721' &amp;&amp; ${screen.width} &lt;= '1281'">4 2</v.gridAutoLayout>
		<v.gridAutoLayout if="${screen.width} &gt; '1281'">5 3</v.gridAutoLayout>
		<v.ScrollBar>0.0035</v.ScrollBar>
	</variables>

	<!-- Move help away -->
	<view name="system,grid">
	<helpsystem name="help">
		<textColor>${fgColor}</textColor>
		<iconColor>${sectColor}</iconColor>
		<pos>10 10</pos>
	</helpsystem>
	</view>

	<!-- Menu tweaks -->
  <view name="menu">
    <menuText name="menutext">
      <selectedColor>${onMainColor}</selectedColor>
      <selectorColor>${mainColor}</selectorColor>
      <color>${fgColor}</color>
      <separatorColor>${fgColor}${percent.5}</separatorColor>
    </menuText>

    <menuTextSmall name="menutextsmall">
      <color>${sectColor}</color>
    </menuTextSmall>

    <menuGroup name="menugroup">
      <color>${sectColor}</color>
      <separatorColor>${sectColor}${percent.60}</separatorColor>
      <backgroundColor>${sectColor}${percent.10}</backgroundColor>
    </menuGroup>

    <menuBackground name="menubg">
      <color>${bgColor}</color>
    </menuBackground>

    <menuText name="menufooter">
      <color>${fgColor}${percent.80}</color>
    </menuText>

    <menuText name="menutitle">
      <color>${fgColor}</color>
    </menuText>

    <menuTextEdit name="menutextedit">
      <inactive>./../systems/input_inactive-dark.svg</inactive>
      <active>./../systems/input_active-dark.svg</active>
    </menuTextEdit>
  </view>

	<!-- MBattery and clock tweaks -->
	<view name="screen">
		<batteryIndicator name="batteryIndicator">
		<color>FFFFFF</color>
		</batteryIndicator>
		
		<batteryIndicator name="batteryIndicator"
			visible="false"
		/>
		
		<controllerActivity name="controllerActivity">
			<visible>false</visible>
		</controllerActivity>

		<text name="clock">
			<pos>1 1</pos>
		</text>


		<stackpanel name="batteryIndicatorExtra" extra="true"
			orientation="horizontal"
			separator="2"
			reverse="true"
			size="0.58 0.045"
			origin = "0 0"
			pos="-0.4 0.005"
		>

			<batteryText name="ss.batterytext"
				fontPath="./../fonts/${fontRegular}"
				color="${c.text}"
				fontSize="0.035"
				
			/>

			<text name="ss.separator1"
			
				text="  "
				ifSubset="batterybar:yes"
				fontPath="./../fonts/${fontRegular}"
				fontSize="0.017"
				color="${c.text}"
			/>
	
			<batteryIcon name="ss.battery"
			
				ifSubset="batterybar:yes"
				incharge="./../systems/batteryIndicator/incharge.png"
				full="./../systems/batteryIndicator/full.png"
				at75="./../systems/batteryIndicator/75.png"
				at50="./../systems/batteryIndicator/50.png"
				at25="./../systems/batteryIndicator/25.png"
				empty="./../systems/batteryIndicator/empty.png"
				maxSize="0.7 0.7"
				linearSmooth="true"
				color="${c.text}"
				pos="0 0.2"
			/>
			<text name="ss.separator2"
				text="  "
				fontPath="./../fonts/${fontRegular}"
				fontSize="0.017"
				color="${c.text}"
			/>
		  
			<networkIcon name="ss.network"
				networkIcon="./../icons/Network.png"
				planemodeIcon="./../icons/Planemode.png"
				maxSize="1 1"
				linearSmooth="true"
				color="${c.text}"
			/>
	  
		</stackpanel>
		<stackpanel name="systemClockPanel" orientation="horizontal" size="0.58 0.045" pos="0.005 0.005">
			<clock name="system-clock"
				fontPath="./../fonts/${fontRegular}"
				color="${c.text}"
				fontSize="0.023"
			/>
			
		</stackpanel>

	</view>

</theme>
